/* ==========================================================================
   Variables
========================================================================== */

$c-grey = #797979;
$c-bg-grey = #e0e0e0;

/* ==========================================================================
   Placeholders
========================================================================== */

.file {
  cursor: pointer;
  height: 100%;
  left: 0;
  opacity: 0;
  position: absolute;
  top: 0;
  width: 100%;

  &:disabled {
    cursor: not-allowed;
  }
}

.wrapcomp {
  cursor: pointer;
  overflow: hidden;
  position: relative;
}

.holdTags {
  margin-top: 10px;
}

.tags {
  align-items: center;
  background: $c-bg-grey;
  border: 0;
  border-radius: 25px;
  box-sizing: border-box;
  color: $c-grey;
  display: inline-flex;
  font-size: 12px;
  line-height: 1.4em;
  margin-right: 10px;
  padding: 5px 20px;
  text-transform: uppercase;
  user-select: none;
  vertical-align: middle;

  i {
    color: $c-grey;
    cursor: pointer;
  }
}

.buttonRemove {
  margin-top: 20px;
}

.wrapperImg {
  margin-right: 30px;
}

.contentList {
  display: flex;
}
