/* ==========================================================================
   Variables
========================================================================== */

$c-background-bar = lightgrey;

/* ==========================================================================
   ProgressBar Elements
========================================================================== */

.progressWrap {
   margin: 0;
   padding: 0;
   border-radius: 15px;
   display: flex;
	width: 100%;
	height: 4px;
   background-color: $c-background-bar;
	position: relative;
}


.progressBar {
   margin: 0;
   padding: 0;
   display: flex;
   position: relative;
   box-shadow: inset 0 2px 9px rgba(255, 255, 255, 0.3), inset 0 -2px 6px rgba(0, 0, 0, 0.4);
   overflow: hidden;
	height: 4px;
   animation: progressBar linear 3s both;
}

/* ==========================================================================
   ProgressBar Props
========================================================================== */

.primary {
  background-color: $c-primary;
}

.secondary {
   background-color: $c-secondary;
}

.error {
   background-color: $c-error;
}
.warning {
   background-color: $c-warning;
  }

.success {
   background-color: $c-success;
}

@keyframes progressBar {
   0% { width: 0; }
}


