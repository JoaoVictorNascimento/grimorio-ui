.container {
  border: 1px solid lightgrey;
  border-radius: 2px;
  padding: 8px;
  margin-bottom: 8px;
  background-color: white;
  flex: 1;
  max-height: 34px;
}

.changeBackground {
  background-color: #dedede;
  border: 1px solid #404040;
}

.noneClose {
  display: none;
}

.button {
  padding: 0px;
  border: 0px;
}

.icon {
  background-color: white;
  border-top: 1px solid lightgrey;
  border-right: 1px solid lightgrey;
  border-bottom: 1px solid lightgrey;
  border-radius: 2px;
  padding: 8px;
  margin-bottom: 8px;
  background-color: white;
  max-height: 34px;
}

.body {
  display flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
