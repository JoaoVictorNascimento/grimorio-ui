/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/config';
/* ==========================================================================
   Placeholders
========================================================================== */

$brandHeader {
  align-items: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  display: flex;
  font-size: 0;
  height: 60px;
  justify-content: center;
  overflow: hidden;
  padding: 15px 0;
}

$brandLogo {
  fill: $white;
  width: auto;
}
/* ==========================================================================
   Panel Component
========================================================================== */

.loader {
  margin-top: 10px;
}

.error {
  margin-top: 10px;
}

/* Default
 ================ */

.default {
  @extend $drop-shadow;
  background: $white;
  border-radius: 2px;
  width: 100%;

  &.isBrand {
    padding: 0;
  }
}

.content.isBrand {
  padding: 0 10px 10px;
}

.title {
  color: $c-support;
  font-size: 21px;
}

/* Size
 ================ */
.wrapper {
  &.small {
    padding: 20px 15px;
  }

  &.medium {
    padding: 25px 20px;
  }

  &.large {
    padding: 30px 25px;
  }

  &.isBrand {
    padding: 0;
  }
}

/* Footer
 ================ */
.footer {
  border-top: 1px solid $c-secondary;

  &.small {
    padding: 15px;
  }

  &.medium {
    padding: 20px;
  }

  &.large {
    padding: 25px;
  }
}

/* Brand
 ================ */
.acom {
  @extend $brandHeader;
  background: $c-acom;

  .brandLogo {
    @extend $brandLogo;
    height: 22px;
  }
}

.suba {
  @extend $brandHeader;
  background: $c-suba;

  .brandLogo {
    @extend $brandLogo;
    height: 28px;
  }
}

.shop {
  @extend $brandHeader;
  background: $c-shop;

  .brandLogo {
    @extend $brandLogo;
    height: 30px;
    stroke: $white;
  }
}

.soub {
  @extend $brandHeader;
  background: $c-soub;

  .brandLogo {
    @extend $brandLogo;
    height: 35px;
  }
}
