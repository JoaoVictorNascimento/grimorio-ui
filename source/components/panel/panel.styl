/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';

/* Color
========================================================================== */

/* ==========================================================================
   Placeholders
========================================================================== */
$defaultPanel {
  @extend $drop-shadow;
  width: 100%;
  border-radius: 2px;
  overflow: hidden;
}

/* ==========================================================================
   Panel Component
========================================================================== */

/* Default
 ================ */

.default {
  @extend $defaultPanel;
  padding: 20px 25px;

  &__header {
    color: $c-support;
    font-size: 18px;
  }
}

/* Brand
 ================ */

.brand {
  @extend $defaultPanel;

  &__header {
    overflow: hidden;
    font-size: 0;
  }

  &__content {
    padding: 10px;
  }
}
