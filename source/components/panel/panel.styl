.loader {
  margin-top: 10px;
}

.error {
  margin-top: 10px;
}

/* Default
================ */
.default {
  // @extend $drop-shadow;
  background: $white;
  border-radius: 2px;
  width: 100%;

  &.shadow {
    @extend $drop-shadow;
  }

  &.line {
    @extend $base-border;
  }

  &.isBrand {
    padding: 0;
  }

  &.noPadding {
    padding: 0;
  }
}

/* Header
================ */

.titleWrap {
  &.isAccordion {
    align-items: center;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
  }

  &.small {
    padding: 15px 15px 0;
  }

  &.medium {
    padding: 20px;
  }

  &.large {
    padding: 25px;
  }
}

.titleBorder {
  border-bottom: 1px solid var(--c-secondary);

  // &.small {
  //   padding-bottom: 15px;
  // }

  // &.medium {
  //   padding-bottom: 20px;
  // }

  // &.large {
  //   padding-bottom: 25px;
  // }
}

.title {
  color: var(--c-support);
  font-size: 21px;
}

.arrow {
  margin-left: 10px;
}

/* Size
================ */
.wrapper {
  &.small {
    padding: 20px 15px;
  }

  &.medium {
    padding: 25px 20px;
  }

  &.large {
    padding: 30px 25px;
  }

  &.isBrand {
    padding: 0;
  }

  &.noPadding {
    padding: 0;
  }

  &.isClosed {
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }
}

.content {
  opacity: 1;
  transition: all 0.3s ease;

   &.small {
    padding: 20px 15px;
  }

  &.medium {
    padding: 25px 20px;
  }

  &.large {
    padding: 30px 25px;
  }

  &.isClosed {
    opacity: 0;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  &.noPadding {
    padding: 0;
  }
}

/* Footer
================ */
.footer {
  border-top: 1px solid var(--c-secondary);
  display: block;

  &.small {
    padding: 15px;
  }

  &.medium {
    padding: 20px;
  }

  &.large {
    padding: 25px;
  }

  &.isClosed {
    display: none;
  }
}

