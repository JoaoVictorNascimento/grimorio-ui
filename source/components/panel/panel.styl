/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';
/* ==========================================================================
   Placeholders
========================================================================== */

$brandHeader {
  align-items: center;
  border-top-left-radius: 2px;
  border-top-right-radius: 2px;
  display: flex;
  font-size: 0;
  overflow: hidden;
  padding: 15px 0;
  justify-content: center;
}

/* ==========================================================================
   Panel Component
========================================================================== */

/* Default
 ================ */

.default {
  @extend $drop-shadow;
  border-radius: 2px;
  padding: 25px 20px;
  width: 100%;

  &.isBrand {
    padding: 0;
  }
}

.content.isBrand {
  padding: 0 10px 10px;
}

.title {
  color: $c-support;
  font-size: 18px;
}

/* Brand
 ================ */
.acom {
  @extend $brandHeader;
  background: $c-acom;
}

.suba {
  @extend $brandHeader;
  background: $c-suba;
}

.shop {
  @extend $brandHeader;
  background: $c-shop;
}
