.panel-steps {
  display: flex;
  justify-content: center;
}

.stepsHolderActive {
  color: var(--c-primary);
  .stepsNumber {
    background-color: var(--c-primary);
    padding: 2px;
  }
}

.stepsHolder {
  align-items: center;
  display: flex;
  flex-grow: 1;
  &:last-child {
    flex-grow: 0;
  }
}

.steps {
  color: $c-gray-1;
  display: inline-flex;
  justify-content: center;
  width: 100%;
}

.stepsHolderLine {
  align-self: center;
  background-color: $c-secondary-medium;
  height: 1px;
  margin: 0 18px;
  vertical-align: middle;
  flex-grow: 1;
}

.stepsCurrent {
  color: var(--c-primary);
}

.stepsNumber {
  background-color: grey;
  border-radius: 50%;
  color: $c-secondary-light;
  font-size: 15px;
  height: 24px;
  margin-right: 7px;
  padding: 3px;
  text-align: center;
  vertical-align: middle;
  width: 24px;
  flex-shrink: 0;
}

.currentNumber {
  background-color: var(--c-primary);
}
