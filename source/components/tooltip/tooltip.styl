/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';

/* ==========================================================================
   Placeholders
========================================================================== */
$dialog {
  @extend $drop-shadow;
  font-size: 12px;
  border-radius: 2px;
  content: attr(data-ttmessage);
  background: $white;
  height: 0;
  opacity: 0;
  padding: 0;
  visibility: hidden;
  display: none;
  position: absolute;
  width: auto;
  word-wrap: break-word;
  transition: all 1s ease;
  text-shadow: none;
}

$triangle {
  color: $white;
  height: 0;
  opacity: 0;
  padding: 0;
  display: none;
  position: absolute;
  width: auto;
  word-wrap: break-word;
  font-size: 15px;
  text-align: left;
  transition: all 1s ease;
}

$centerX {
  left: 50%;
  transform: translate(-50%, 0);
}

$centerY {
  top: 50%;
  transform: translate(0, -50%);
}
/* ==========================================================================
   Tooltip Elements
========================================================================== */

/* ==========================================================================
   Tooltip Props
========================================================================== */

/* Default
 ================ */

.default {
  cursor: pointer;
  position: relative;
  fill: $base-text-color;
  display: inline;

  &:hover .dialog {
    display: block;
    height: auto;
    opacity: 1;
    visibility: visible;
    padding: 7px;
    z-index: 2;
  }

  &:hover .dialog:after {
    display: block;
    height: auto;
    opacity: 1;
    z-index: 2;
  }
}

.dialog {
  @extend $dialog;
}


.top {
  @extend $centerX;
  bottom: calc(100% + 9px);
}

.top.dialog:after {
  @extend $triangle;
  @extend $centerX;
  top: calc(100% - 7px);
  content: '▼';
  text-shadow: 0px 2px 2px rgba(0, 0, 0, .15);
}

.bottom {
  @extend $dialog;
  @extend $centerX;
  top: calc(100% + 9px);
}

.bottom.dialog:after {
  @extend $triangle;
  @extend $centerX;
  content: '▲';
  text-shadow: 0px -1.5px 1px rgba(0, 0, 0, .15);
  bottom: calc(100% - 4px);
}


.right {
  @extend $dialog;
  @extend $centerY;
  left: calc(100% + 14px);
}

.right.dialog:after {
  @extend $triangle;
  @extend $centerY;
  content: '◀';
  right: 100%;
  padding-left: 3px;
  text-shadow: -2px 0px 1px rgba(0, 0, 0, .15);
}

.left {
  @extend $dialog;
  @extend $centerY;
  right: calc(100% + 14px);
}

.left.dialog:after {
  @extend $triangle;
  @extend $centerY;
  content: '▶';
  padding-right: 3px;
  left: 100%;
  text-shadow: 2px 0px 1px rgba(0, 0, 0, .15);
}

.block {
  display: inline-block;
}
