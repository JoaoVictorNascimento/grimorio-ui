/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';

$gutter-px = 8px;

/* ==========================================================================
   Placeholders
========================================================================== */
$social-ico {
  border-radius: 3px;
  cursor: pointer;
  margin-right: 5px;
}

$default-product {
  position: relative;

  a {
    color: $base-text-color;
    text-decoration: none;
  }
}

/* ==========================================================================
   Product Elements
========================================================================== */

.tag {
  position: absolute;
  z-index: 1;
}

.img {
  img {
    height: auto;
    width: 100%;
  }
}

.name {
  font-size: 14px;
}

.valid {
  font-size: 12px;
  margin-top: $gutter-px;
}

.social {
  margin-top: $gutter-px;
  padding-bottom: 2px;
}

.copy {
  margin-right: 5px;
  transition: all 0.3s ease;

  svg {
    margin-left: 5px;
  }
}

.facebook {
  @extend $social-ico;
  fill: $c-facebook;
}

.twitter {
  @extend $social-ico;
  fill: $c-twitter;
}

/* ==========================================================================
   Product Props
========================================================================== */

/* Default
 ================ */

.default {
  @extend $default-product;

  .price {
    color: $c-text-dark;
    font-size: 28px;
    font-weight: 400;
    margin-top: $gutter-px;
  }
}

/* Card
 ================ */

.card {
  @extend $default-product;
  text-align: center;

  .price {
    color: $c-primary;
    font-size: 28px;
    margin: 15px 0;
    text-align: center;
  }
}
