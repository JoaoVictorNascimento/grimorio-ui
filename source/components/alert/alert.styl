/* ==========================================================================
   Variables
========================================================================== */

// 'danger', 'warning', 'success', 'info'

/* ==========================================================================
   Placeholders
========================================================================== */
$c-warning = #F1B200;
$c-danger = #ff5144;
$c-info = #666;

/* ==========================================================================
   Alerts Elements
========================================================================== */
.alertWrap {
  @extend $drop-shadow;
  background: $white;
  border-radius: 2px;
  display: flex;
  overflow: hidden;
  position: relative;

  &.isOverlay {
    z-index: $z-upmax;
  }
}

.icon {
  align-items: center;
  color: $white;
  display: flex;
  justify-content: center;
  width: 70px;
}

.content {
  align-items: center;
  display: flex;
  justify-content: space-between;
  padding: 10px 15px;
  width: calc(100% - 70px);
}

.text {
  padding-right: 15px;
  width: 100%;
}

.action {
  min-width: 160px;
}

.close {
  color: $c-info;
  cursor: pointer;
}

.title {
  font-size: 18px;
  font-weight: 400;
  margin-bottom: 7px;
  margin: 0;
}

.overlay {
  background: $black;
  height: 100%;
  left: 0;
  opacity: 0.6;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: $z-upmin;
}

/* ==========================================================================
   Alerts Props
========================================================================== */
.danger {
  .icon {
    background: $c-danger;
  }

  .title {
    color: $c-danger;
  }
}
.warning {
  .icon {
    background: $c-warning;
  }

  .title {
    color: $c-warning;
  }
}
.success {
  .icon {
    background: $c-success;
  }

  .title {
    color: $c-success;
  }
}

.info {
  .icon {
    background: $c-info;
  }

  .title {
    color: $c-info;
  }
}

