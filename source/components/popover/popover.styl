/* ==========================================================================
   Popover Elements
========================================================================== */

.popoverContainer {
  position: relative;
  display: inline-block;
}

.popover {
  @extend $drop-shadow;
  position: absolute;
  top: 100%;
  left: 0;
  background-color: #FFF;
  border: 1px solid lightgrey;
}

