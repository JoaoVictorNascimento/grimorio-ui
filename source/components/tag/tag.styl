/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';

.tag {
  display: inline-block;
  border-radius: 5px;
  padding: 8px 15px;
  line-height: 18px;
}

/* Primary
 ================ */
.primary{
  background: $c-primary;
  color: $white;
}

/* Secondary
 ================ */
.secondary{
  background: $c-secondary;
  color: $white;
}

/* Closable
 ================ */
.closable {
  padding: 8px 15px;

  >.icon{
    margin-left: 8px;
  }
}
