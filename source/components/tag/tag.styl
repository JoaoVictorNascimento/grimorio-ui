/* ==========================================================================
   Variables
========================================================================== */
.tag {
  align-items: center;
  border-radius: 16px;
  display: inline-flex;
  font-size: 14px;
  min-height: 32px;
  padding: 0 12px;

  & > .icon {
    border-radius: 100%;
    color: rgba(0, 0, 0, .87);
    cursor: pointer;
    display: relative;
    margin-left: 8px;
    opacity: .4;

    &:hover {
      opacity: .54;
    }
  }
}

/* Primary
 ================ */
.primary {
  background: var(--c-primary);
  color: $white;
}

/* Secondary
 ================ */
.secondary {
  background: var(--c-secondary);
  color: $white;
}
