/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';
$shadow-color = rgba(0, 0, 0, 0.125);
$c-back-disabled = #eee;

/* ==========================================================================
   Placeholders
========================================================================== */
$button {
  border: 0;
  border-radius: 2px;
  cursor: pointer;
  font-family: $base-font-family;
  position: relative;
  text-align: center;
  transition: all 0.3s ease;

  &:focus {
    outline: 0;
  }

  &:disabled,
  &:disabled:hover {
    background: $c-back-disabled;
    color: lighten($c-text, 25%);
    cursor: not-allowed;
  }
}

/* Primary
 ================ */
.primary {
  @extend $button;
  background: $c-primary;
  color: $white;

  path {
    fill: $white;
  }

  &:active {
    box-shadow: inset 0 3px 5px $shadow-color;
  }

  &:hover,
  &.isActive {
    background: $c-primary-dark;
  }
}

/* Dark
================ */

.secondary {
  @extend $button;
  background: $c-primary-dark;
  color: $white;

  path {
    fill: $white;
  }

  &:active {
    box-shadow: inset 0 3px 5px $shadow-color;
  }

  &:hover,
  &.isActive {
    background: darken($c-primary-dark, 5%);
  }
}

/* Clean
================ */
.clean {
  @extend $button;
  background: none;
  color: $c-primary;
  fill: $c-primary;
  padding: 5px 7px;

  &:hover {
    text-decoration: underline;
  }

  &.inverted {
    color: $white;
    fill: $white;
  }
}

/* None
================ */
.transparent {
  @extend $button;
  background: none;
  border: 0;

  &.outline,
  &:hover,
  &:disabled,
  &:hover:disabled {
    background: none;
  }
}

/* SIZES
 ==================================================== */

/* Small
================ */
.small {
  font-size: 13px;
  padding: 4px 10px;
}

/* Medium
================ */
.medium {
  font-size: 14px;
  padding: 7px 20px;
}

/* Large
================ */
.large {
  font-size: 15px;
  padding: 8px 25px;
}

/* None
================ */
.none {
  line-height: 1;
  padding: 0;
}

/* Block
 ========================================================================== */
.block {
  display: block;
  width: 100%;
}
