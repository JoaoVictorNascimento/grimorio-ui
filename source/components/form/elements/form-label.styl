@import "../../../styl/config";

/* ==========================================================================
  Variables
  ========================================================================== */

/* Color
   ========================================================================== */
$label-color = #333;
$success = #1ab394;
$warning = #f8ac59;
$error = #f44336;

/* ==========================================================================
   Form Label Component
   ========================================================================== */
.label {
  color: $label-color;
  display: inline-block;
  font-size: 13px;
  font-weight: 700;
  margin-bottom: 5px;
  max-width: 100%;
  width: 100%;
}

.label-addon { float: right; }

.label--horizontal {
  x-column(3);

  margin-bottom: 0;
  padding-top: 7px;
  text-align: right;
}

.label--success { color: $success; }
.label--warning { color: $warning; }
.label--error { color: $error; }
