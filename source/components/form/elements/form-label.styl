@import "../../../styl/config";

/* ==========================================================================
  Variables
  ========================================================================== */

/* Color
   ========================================================================== */
$c-label = #333;

/* ==========================================================================
   Form Label Component
   ========================================================================== */
.label {
  color: $c-label;
  display: inline-block;
  font-size: 13px;
  margin-bottom: 5px;
  max-width: 100%;
  width: 100%;
}

.label-addon { float: right; }

.isHorizontal {
  x-column(3);

  margin-bottom: 0;
  padding-top: 7px;
  text-align: right;
}

.isCheckboxOrRadio {
  line-height: 1.7;
  margin-bottom: 0;
  width: auto;
}

.has-success { color: $c-success; }
.has-warning { color: $c-warning; }
.has-error { color: $c-error; }
