@import "../../../styl/config";

/* ==========================================================================
  Variables
  ========================================================================== */
$c-success-light = lightness($c-success);
$c-warning-light = lightness($c-warning);
$c-error-light = lightness($c-error);

/* Border color
   ========================================================================== */
$c-border = #ccc;
$c-check-border = #7F7F7F;

/* Field
   ========================================================================== */
$default-background = #fff;
$c-default = #333;

$disabled = lighten($c-secondary, 60%);
$c-disabled = #999;
$c-disabled-light = #b4b5b5;

/* Addon
   ========================================================================== */
$c-addon-background = #18a689;
$c-addon-border = $c-border;
$c-addon = $c-primary;

/* ==========================================================================
  Placeholders
  ========================================================================== */

/* Field (text || select || textarea )
========================================================================== */
$field {
  border: 0;
  border-bottom: 1px solid $c-border;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  display: block;
  font-size: 16px;
  height: 35px;
  outline: 0;
  padding-top: 3px;
  text-indent: 5px;
  width: 100%;

  &:focus {
    border-color: $c-primary;
  }

  &:disabled {
    background: $disabled;
    color: $c-disabled;
  }
}

/* Radio and checkbox
========================================================================== */
$radioCheckbox {
  align-items: center;
  border: 2px solid $c-check-border;
  cursor: pointer;
  display: flex;
  height 20px;
  justify-content: center;
  transition: all .3s ease;
  width: 20px;

  &.isDisabled {
    background: $disabled;
    cursor: not-allowed;
  }
}

/* addon
========================================================================== */
$addon {
  border: 0;
  bottom: 7px;
  color: $c-addon;
  display: block;
  fill: $c-addon;
  font-size: 14px;
  font-weight: 400;
  line-height: 1;
  overflow: hidden;
  padding: 3px 6px;
  position: absolute;
  text-align: center;
  vertical-align: middle;
  white-space: nowrap;
  width: 35px;

  [class*="button"] {
    margin: -6px -10px;
    padding: 6px 10px;
    outline: none;
  }
 }

/* ==========================================================================
   Form Control Component
   ========================================================================== */

/* Form field
   ========================================================================== */
.form-field {
  @extend $field;

  color: $c-default;
}

.form-field--outline {
  @extend $field;

  border: 1px solid $c-border;
  border-radius: 3px;
}

.form-field--select {
  @extend $field;
  background: $default-background;
  border: 0;
  color: $c-default;
}

.form-field--radio {
  background: $default-background;

  input[type="radio"] {
    display: none;
  }

  .fakeInput {
    @extend $radioCheckbox;
    border-radius: 50%;
    color: $c-support-dark;
  }

  input[type="radio"]:checked ~ .fakeInput {
    border-color: $c-support-dark;
  }

  input[type="radio"]:checked ~ .fakeInput:before {
    content: '';
    display: block;
    width: 10px;
    height 10px;
    border-radius: 50%;
    background: $c-support-dark;
    transition: all .3s ease;
  }
}

.form-field--checkbox {
  background: $default-background;

  input[type="checkbox"] {
    display: none;
  }

  .fakeInput {
    @extend $radioCheckbox;
    border-radius: 3px;
  }

  .checkIcon {
    display: none;
    fill: $white;
  }

  .checkIcon.isChecked {
    display: block;
  }

  input[type="checkbox"]:checked ~ .fakeInput {
    background: $c-support-dark;
    border-color: $c-support-dark;
    transition: all .3s ease;
  }
}

.form-field--textarea {
  @extend $field;

  height: 200px;
}

.form-field--horizontal {
  vertical-align: middle;
  width: 100%;
}

/* Form addon
   ========================================================================== */
.form-addon { background: none; }

.form-addon--withItens {
  border-collapse: separate;
  display: table;
  position: relative;
  width: 100%;
}

.form-addon-before {
  @extend $addon;

  border-bottom-right-radius: 0;
  border-right: 0;
  border-top-right-radius: 0;
  left: 0;

  & ~ .form-field {
    padding-left: 35px;
  }
}

.form-addon-after {
  @extend $addon;

  border-bottom-left-radius: 0;
  border-left: 0;
  border-top-left-radius: 0;
  right: 0;

  & ~ .form-field {
    padding-right: 35px;
  }
}

.form-addon--disabled {
  background: $disabled;
  border-color: $disabled;
  color: $c-disabled-light;
}

.form-addon--horizontal {
  x-column(9);
}

/* Feedback
   ========================================================================== */
.form-feedback {
  display: block;
  height: 28px;
  line-height: 28px;
  pointer-events: none;
  position: absolute;
  right: 0;
  text-align: center;
  top: 0;
  width: 28px;
  z-index: 2;
}

/* Checkbox or radio
   ========================================================================== */
.isCheckboxOrRadio {
  & .form-control {
    float: left;
    margin-right: 5px;
  }
}

/* Validations
   ========================================================================== */
.has-success {
  &.form-addon,
  & .form-feedback {
    color: $c-success;
  }

  & .form-feedback { fill: $c-success; }
  & .form-addon {
    background: $c-success-light;
    border-color: $c-success;
  }

  & .form-field,
  & .form-control { border-color: $c-success; }
}

.has-warning {
  &.form-addon,
  & .form-feedback {
    color: $c-warning;
  }

  & .form-feedback { fill: $c-warning; }
  & .form-addon {
    background: $c-warning-light;
    border-color: $c-warning;
  }

  & .form-field,
  & .form-control { border-color: $c-warning; }
}

.has-error {
  &.form-addon,
  & .form-feedback {
    color: $c-error;
  }

  & .form-feedback { fill: $c-error; }
  & .form-addon {
    background: $c-error-light;
    border-color: $c-error;
  }

  & .form-field,
  & .form-control { border-color: $c-error; }
}
