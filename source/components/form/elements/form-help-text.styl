/* Colors
   ========================================================================== */
$color = #737373;
$error = #f44336;

/* ==========================================================================
 HelpText
 ========================================================================== */
.help-text {
  color: $color;
  display: block;
  font-size: 1.2rem;
  margin-bottom: 10px;
  margin-top: 5px;
}

.has-success { color: $success; }
.has-warning { color: $warning; }
.has-error { color: $error; }
