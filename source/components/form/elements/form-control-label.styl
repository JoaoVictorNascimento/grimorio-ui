@import "../../../styl/config";

/* ==========================================================================
  Variables
  ========================================================================== */

/* Color
   ========================================================================== */
$label-color = #999;
$label-color-active = #999;

$success = #1ab394;
$warning = #f8ac59;
$error = #f44336;

/* ==========================================================================
   Form Label Component
   ========================================================================== */
.labelWrapper { position: relative }

.label {
  color: $label-color;
  font-size: 16px;
  font-weight: 400;
  line-height: 1;
  position: absolute;
  top: 0;
  left: 6px;
  transition: all 0.25s ease;
  pointer-events: none;
}

.isActive {
  color: $c-primary;
  font-size: 12px;
  font-weight: 700;
  top: -1.5rem;
  left: 0;
  transition: all 0.125s ease;
}

.formControl { margin-top: 20px; }

.has-success.label { color: $success; }
.has-warning.label { color: $warning; }
.has-error.label { color: $error; }
