/* ==========================================================================
   Variables
========================================================================== */
@import '../../styl/00-settings/_variables.styl';

$wrap {
  align-items: center;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  height: 100%;
  justify-content: center;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 2;
}

/* ==========================================================================
   Loader Elements
========================================================================== */

.wrap {
  display: inline-block;

  &.isFull {
    @extend $wrap;
    position: absolute;
  }

  &.isFullPage {
    @extend $wrap;
    position: fixed;
  }
}

.spinner {
  animation: spinner 0.6s linear infinite;
  border: 3px solid $c-secondary;
  border-radius: 50%;
  border-top-color: $c-primary;
  box-sizing: border-box;
  display: block;
  height: 40px;
  width: 40px;
}

@keyframes spinner {
  to {transform: rotate(360deg);}
}
