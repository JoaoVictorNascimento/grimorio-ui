/* Default
 ================ */

.default {
  @extend $default;
}

.content {
  @extend $drop-shadow;
  background: $white;
  position: fixed;
  transition: all 0.5s ease;
  z-index: $z-upmax;
}

.right {
  right: -25%;
  top: 0;
  width: 25%;
  height: 100vh;
  &.isOpen  {
    right: 0;
  }
}

.left {
  left: -25%;
  top: 0;
  width: 25%;
  height: 100vh;
  &.isOpen  {
    left: 0;
  }
}

.top {
  top: -35%;
  left: 0;
  width: 100%;
  height: 35%;
  &.isOpen  {
    top: 0;
  }
}

.bottom {
  bottom: -35%;
  left: 0;
  width: 100%;
  height: 35%;
  &.isOpen  {
    bottom: 0;
  }
}

.overlay {
  @extend $overlay;
}