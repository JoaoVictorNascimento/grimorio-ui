/* Default
 ================ */

.toggleBool {
  display: flex;
  min-width: 65px;
}

$toggleBoolBtn {
  background: #fff;
  display: inline-block;
  color: #d7d7d7;
  padding: 5px;
  border-style: solid;
  border-width: 1px;
  border-color: #d7d7d7;
  cursor: pointer;

  &.active {
    background: $c-primary;
    border-color: $c-primary;
    color: #fff;
  }
}

.toggleBoolLeft {
  @extend $toggleBoolBtn;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
  border-right-width: 0;
}

.toggleBoolRight {
   @extend $toggleBoolBtn;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
  border-left-width: 0;
}
