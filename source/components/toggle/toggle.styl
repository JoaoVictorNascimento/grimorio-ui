   Variables
========================================================================== */
$track = 36px;
$knob = 20px;

/* ==========================================================================
   Toggle Elements
========================================================================== */

/* ==========================================================================
   Toggle Props
========================================================================== */

/* Default
 ================ */

.wrap {
  position: relative;
  display: inline-block;
  cursor: pointer;
}

.input {
  display: none;
}

.track {
  display: block;
  background-color: $c-gray-1;
  box-sizing: border-box;
  width: $track;
  height: 14px;
  border-radius: 7px;
  transition: background-color 90ms cubic-bezier(.4,0,.2,1);
}

.input:checked ~ .track {
  background-color: lighten($c-primary, 5%);
}

.knob {
  background-color: $white;
  display: block;
  box-sizing: border-box;
  width: $knob;
  height: $knob;
  border-radius: 50%;
  pointer-events: none;
  z-index: 1;
  position: absolute;
  top: -3px;
  left: 0;
  transition: left 80ms linear;
  box-shadow: 0 3px 1px -2px rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 1px 5px 0 rgba(0,0,0,.12);
}

.input:checked ~ .knob {
  left: $track - $knob;
  background-color: $c-primary-dark;
}
